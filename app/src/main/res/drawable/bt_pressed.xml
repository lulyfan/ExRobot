<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFEC7600"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>  
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#CEFFCA"
                android:startColor="#4BFF04"
                android:type="linear" />  
                    
            <corners android:radius="5dp" />
        </shape>
          

    </item>
</layer-list>

